{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
<div class="bg-white py-4" style="margin-top:50px;margin-bottom:50px">
  <div class="container">
    <div class="row">
      {% for evenement in evenements %}
      <div class="col-md-4 mt-4" style="background-color:white">
        <div class="card mb-4 shadow-sm h-100">
          <img src="{{ asset('uploads/' ~ evenement.image) }}" class="card-img-top" alt="Event Image">
          <div class="card-body">
            <h5 class="card-title">{{ evenement.nom }}</h5>
            <p class="card-text">Participants: {{ evenement.nbparticipant }}</p>
            <p class="card-text">Start Date: {{ evenement.datedebut ? evenement.datedebut|date('Y-m-d') : '' }}</p>
            <p class="card-text">End Date: {{ evenement.datefin ? evenement.datefin|date('Y-m-d') : '' }}</p>
            <p class="card-text">{{ evenement.description }}</p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group" style="margin-bottom:20px">
                <a href="{{ path('app_evenement_show', {'id': evenement.id}) }}" class="btn btn-sm btn-outline-secondary" style="background-color: #007bff; color: #fff;">Show</a>
                <a href="{{ path('app_reservation_event_new', {'id': evenement.id}) }}" class="btn btn-sm btn-outline-secondary" style="background-color: #28a745; color: #fff;">Participate</a>
              </div>
            </div>
          </div>
        </div>
      </div>
      {% else %}
      <div class="col-md-12">
        <div class="alert alert-warning" role="alert">
          No records found
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</div>

{% endblock %}
