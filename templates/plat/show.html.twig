{% extends 'base.html.twig' %}

{% block title %}Plat{% endblock %}

{% block body %}
    <div class="container py-4" style="background-color: white;">
        <h1>Plat</h1>

        <a href="{{ path('app_plat_index') }}">back to list</a>
        <table class="table">
            <tbody>
                <tr>
                    <th>NomPlat</th>
                    <td>{{ plat.nomPlat }}</td>
                </tr>
                <tr>
                    <th>DescriptionPlat</th>
                    <td>{{ plat.descriptionPlat }}</td>
                </tr>
                <tr>
                    <th>Prix</th>
                    <td>{{ plat.prix }}</td>
                </tr>
                <tr>
                    <th>Quantite</th>
                    <td>{{ plat.quantite }}</td>
                </tr>
                <tr>
                    <th>NomCategorie</th>
                    <td>{{ plat.nomCategorie }}</td>
                </tr>
<tr>
    <th>Image</th>
    <td><img src="{{ asset('uploads/' ~ plat.image) }}" alt="Plat Image" style="max-width: 200px;"></td>
</tr>
                <tr>
                    <th>LikePlat</th>
                    <td>{{ plat.likePlat }}</td>
                </tr>
                <tr>
                    <th>DislikePlat</th>
                    <td>{{ plat.dislikePlat }}</td>
                </tr>
            </tbody>
        </table>
<div class="mt-3">
    <h6>Add a Comment</h6>
    {{ form_start(form, {'action': path('app_plat_comment', {'idPlat': plat.idPlat}), 'method': 'POST'}) }}
    {{ form_widget(form.contenta) }}
    <button type="submit" class="btn btn-primary">Submit Comment</button> <!-- Submit button -->
    {{ form_end(form) }}
</div>

                                                           <div class="mt-3">
                                    <h6>Comments:</h6>
                                    {% if plat.commentaires|length == 0 %}
                                        <p>No comments yet.</p>
                                    {% else %}
                                        <ul class="list-group">
                                            {% for commentaire in plat.commentaires %}
                                                <li class="list-group-item">{{ commentaire.contenta }}</li>
                                            {% endfor %}
                                        </ul>
                                    {% endif %}
                                </div>
<div class="mt-3">
    <a href="{{ path('like_plat', {'idPlat': plat.idPlat}) }}" class="btn btn-success">Like</a>
    <a href="{{ path('dislike_plat', {'idPlat': plat.idPlat}) }}" class="btn btn-danger">Dislike</a>
</div>
    </div>
{% endblock %}
