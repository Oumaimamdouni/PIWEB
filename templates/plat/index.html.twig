{% extends 'base.html.twig' %}

{% block title %}Plat index{% endblock %}

{% block body %}
<div class="container">
    <div class="card">
        <div class="card-body">
            <div class="row">
                {% for plat in plats %}
                    <div class="col-md-4 mb-4" style="background-color:white;margin-top:20px;margin-bottom:20px">
                        <div class="card">
                            <img src="{{ asset('uploads/' ~ plat.image) }}" class="card-img-top" alt="Plat Image" style="max-height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">{{ plat.nomPlat }}</h5>
                                <p class="card-text">{{ plat.descriptionPlat }}</p>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">Price: {{ plat.prix }}</li>
                                    <li class="list-group-item">Quantity: {{ plat.quantite }}</li>
                                    <li class="list-group-item">Category: {{ plat.nomCategorie }}</li>
                                    <li class="list-group-item">Likes: {{ plat.likePlat }}</li>
                                    <li class="list-group-item">Dislikes: {{ plat.dislikePlat }}</li>
                                </ul>
                                
                                <div class="mt-3">
                                    <img src="{{ qr_code_data_uri('http://192.168.1.19:8000/plat/categorie/456/plats') }}" alt="QR Code" />
                                    <a href="{{ path('app_plat_show', {'idPlat': plat.idPlat}) }}" class="btn btn-sm btn-info">Show</a>
                                    <a href="{{ path('like_plat', {'idPlat': plat.idPlat}) }}" class="btn btn-success">Like</a>
                                    <a href="{{ path('dislike_plat', {'idPlat': plat.idPlat}) }}" class="btn btn-danger">Dislike</a>
                                    <br>
                                </div>
                            </div>

                        </div>
                    </div>
                {% else %}
                    <div class="col">
                        <div class="card">
                            <div class="card-body text-center">
                                <p class="card-text">No records found</p>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
