{% extends 'baseBack.html.twig' %}

{% block title %}Zones{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center">Zones</h1>

        <table class="table table-bordered mt-4">
            <tbody>
                <tr>
                    <th>ZoneId</th>
                    <td>{{ zone.zoneId }}</td>
                </tr>
                <tr>
                    <th>Nom</th>
                    <td>{{ zone.nom }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ zone.description }}</td>
                </tr>
                <tr>
                    <th>Capacity</th>
                    <td>{{ zone.capacity }}</td>
                </tr>
                <tr>
                    <th>Image</th>
                    <td>
                        {% if zone.image %}
                            <img src="{{ asset('uploads/' ~ zone.image) }}" alt="Zone Image" class="img-fluid">
                        {% else %}
                            No image available
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <a href="{{ path('app_zones_back_index') }}" class="btn btn-primary">Back to List</a>
        <a href="{{ path('app_zones_back_edit', {'zoneId': zone.zoneId}) }}" class="btn btn-warning">Edit</a>
        {{ include('zones_back/_delete_form.html.twig') }}
    </div>
{% endblock %}
