{% extends 'baseBack.html.twig' %}

{% block title %}ReservationEvent{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Reservation Event</h3>
                    </div>
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ reservation_event.id }}</td>
                                </tr>
                                <tr>
                                    <th>Description</th>
                                    <td>{{ reservation_event.description }}</td>
                                </tr>
                                <tr>
                                    <th>Date</th>
                                    <td>{{ reservation_event.date ? reservation_event.date|date('Y-m-d') : '' }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_reservation_event_back_index') }}" class="btn btn-secondary mr-2">Back to List</a>
                        <a href="{{ path('app_reservation_event_back_edit', {'id': reservation_event.id}) }}" class="btn btn-warning">Edit</a>
                        {{ include('reservation_event_back/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
